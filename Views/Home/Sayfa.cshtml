
@{
    Layout = null;
}
@model Kullanici


@*...BU tanımlamayı buraya yapmak yerine bütün viewlara yapılsın diye _ViewImports.html dosyasına yapalım...*@

@*@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <!--
        modelin usernamesi için input oluştur...BU şekilde oluşan inputların modelde tanımlaması yapıldısa olduğu gibi render eder..

        oluşan inputun id'si ve name modein propertisinin id'si ve name'si ile oluşur

        taghelper html içerine c# komutları yazılmaması için tercih edilir. Html kodlarımız daha okunaklı olur...

        -->
    <input type="text" id="UserName" name="UserName" class="form-control" />

    <br />
    @Html.TextBoxFor(c => c.UserName, null, new { @class = "form-control" })

    <br />
    <input type="text" asp-for="UserName" />

    <!--
        Shared folderine _PartialName isimli view oluşuturunuz..
        -->
    @Html.Partial("_PartialName")
    <partial name="_PartialName" />


</body>
</html>
